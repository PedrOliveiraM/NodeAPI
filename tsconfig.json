{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "21.0.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "scripts": {
    "dev": "tsx watch --env-file .env src/server.ts"
  },
  "include": ["src"]
}
